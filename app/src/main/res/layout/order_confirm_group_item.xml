<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:background="@color/me_item_bg"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/img"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/name"
        android:maxLines="1"
        android:ellipsize="middle"
        android:layout_toRightOf="@id/img"
        android:textSize="@dimen/list_group_item_text_size"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/provider_name"
        android:maxLines="1"
        android:ellipsize="middle"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/name"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/id_total_price"
        android:textSize="10sp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/provider_name"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/id_total_tip"
        android:layout_below="@id/provider_name"
        android:layout_toLeftOf="@id/id_total_price"
        android:layout_alignTop="@id/id_total_price"
        android:layout_alignBottom="@id/id_total_price"
        android:text="@string/total"
        android:textSize="10sp"
        android:layout_marginRight="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>