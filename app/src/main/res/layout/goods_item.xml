<?xml version="1.0" encoding="utf-8"?>
<com.xxx.gogo.view.goods.GoodsItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/goods_item_bg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/goods_item_height">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img"
        android:layout_gravity="center_vertical"
        android:background="@color/me_item_bg"
        android:scaleType="centerCrop"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="14dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name"
            android:textSize="16sp"
            android:maxLines="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/introduce"
            android:textSize="16sp"
            android:maxLines="1"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/price"
                android:textSize="16sp"
                android:gravity="center"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <FrameLayout
                android:id="@+id/id_view_switcher"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/id_count_container"
                    android:orientation="horizontal"
                    android:layout_gravity="end"
                    android:gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="@string/count"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/id_count_value"
                        android:gravity="center"
                        android:background="@drawable/login_bg"
                        android:layout_width="70dp"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </FrameLayout>

        </FrameLayout>
    </LinearLayout>

</com.xxx.gogo.view.goods.GoodsItemView>